<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/select_mode"
        android:src="@drawable/ic_layers"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/gray_unselected" />

    <androidx.cardview.widget.CardView
        android:id="@+id/panelModeSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/btnClosePanel"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/close_panel"
                    android:src="@drawable/ic_close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/gray_unselected" />

                <LinearLayout
                    android:id="@+id/modesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/btnClosePanel">

                    <LinearLayout
                        android:id="@+id/optionBulletin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/bgBulletin"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_option_selected">

                            <ImageView
                                android:id="@+id/iconBulletin"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/icon_bulletin"
                                android:src="@drawable/ic_bulletin"
                                app:tint="@color/blue_selected" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/textBulletin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/mode_bulletin"
                            android:textColor="@color/blue_selected"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optionRisk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/bgRisk"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@android:color/transparent">

                            <ImageView
                                android:id="@+id/iconRisk"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/icon_risk"
                                android:src="@drawable/ic_landscape"
                                app:tint="@color/gray_unselected" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/textRisk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/mode_risk"
                            android:textColor="@color/gray_unselected"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optionCustom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/bgCustom"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@android:color/transparent">

                            <ImageView
                                android:id="@+id/iconCustom"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/icon_custom"
                                android:src="@drawable/ic_custom"
                                app:tint="@color/gray_unselected" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/textCustom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/mode_custom"
                            android:textColor="@color/gray_unselected"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/customControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/modesContainer">

                    <TextView
                        android:id="@+id/labelElevation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elevation Range (m)"
                        android:textStyle="bold" />

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/sliderElevation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="5000"
                        app:values="@array/default_elevation_values" />

                    <TextView
                        android:id="@+id/labelSteepness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Min Steepness (degrees)"
                        android:textStyle="bold" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderSteepness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:value="25"
                        android:valueFrom="25"
                        android:valueTo="45" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Aspects"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupAspects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="4dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipN"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipNE"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NE" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipE"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSE"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SE" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipS"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSW"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SW" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipW"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="W" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipNW"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NW" />
                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
